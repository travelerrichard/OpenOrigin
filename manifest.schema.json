{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "source_file": { "type": "string" },
    "delivered_file": { "type": "string" },
    "hashes": {
      "type": "object",
      "properties": {
        "source_sha256": { "type": "string" },
        "delivered_sha256": { "type": "string" },
        "metadata_released_sha256": { "type": "string" }
      },
      "required": ["source_sha256", "delivered_sha256", "metadata_released_sha256"]
    },
    "redaction_profile": { "type": "string" },
    "redactions": { "type": "array", "items": { "type": "string" } },
    "timestamp": { "type": "integer" },
    "security": {
      "type": "object",
      "properties": {
        "sign_official": { "type": "boolean" },
        "official_key_fingerprint": { "type": ["string", "null"] },
        "sign_user": { "type": "boolean" },
        "user_key_fingerprint": { "type": ["string", "null"] },
        "log_hash": { "type": "boolean" },
        "log_url": { "type": ["string", "null"] }
      },
      "required": ["sign_official", "sign_user", "log_hash"]
    }
  },
  "required": ["version", "source_file", "delivered_file", "hashes", "timestamp"]
}
